---
import Navbar from "../components/layout/Navbar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Elysia UI - Beautifully Component Made With Tailwind CSS and Alphine JS</title>
	</head>
	<body class="antialiased">
		<div id="page-container" class="mx-auto flex min-h-dvh w-full min-w-[320px] flex-col bg-white text-gray-800 dark:bg-gray-900 dark:text-gray-200">
			<div id="page-content" class="flex h-full max-w-full flex-auto flex-col">
				<Navbar />
				<main class="grow bg-white dark:bg-gray-900 pt-[4.5rem]">
					<div class="dark:bg-secondary-900">
						<div class="container mx-auto xl:max-w-full relative">
							<slot />
						</div>
					</div>
				</main>
			</div>
		</div>
		<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" is:inline></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
